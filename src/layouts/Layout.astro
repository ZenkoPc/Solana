---
import Ad from '../components/ad.astro';
import Footer from '../components/footer.astro';
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="min-h-screen w-screen overflow-x-hidden">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Ad />
		<slot />
		<Footer />
		<script>
			import { Inicialize } from '../scripts/hero'
			document.addEventListener('astro:page-load', () => {
				// This only runs once.
				Inicialize()
			}, { once: false });
		</script>
	</body>
</html>
<style is:global>
	html{
		background: #000;
		font-family: Helvetica;
		box-sizing: border-box;
	}
	*, *::after, *::before{
		padding: 0;
		margin: 0;
	}
	::-webkit-scrollbar{
		width: 5px;
	}
	@font-face {
		font-family: 'Roboto';
		src: url('/fonts/Roboto/Roboto-Regular.ttf');
	}
	@font-face {
		font-family: 'Roboto-Bold';
		src: url('/fonts/Roboto/Roboto-Bold.ttf');
	}
	@font-face {
		font-family: 'Roboto-Thin';
		src: url('/fonts/Roboto/Roboto-Thin.ttf');
	}
	.blue-gradient{
		background: linear-gradient(260deg, #0047FF -13.37%, #00BCD4 109.53%);
	}
	.purple-gradient{
		background: linear-gradient(99deg, #8C01FA -2.99%, #000 102.28%);
	}
	.purple-gradient-reverse{
		background: linear-gradient(99deg, #000 -2.99%, #8C01FA 102.28%);
	}
	.purple-green-gradient{
		background: linear-gradient(262deg, #19FB9B -8.01%, #8C01FA 100%);
	}
	.smooth-gradient{
		background: linear-gradient(265deg, #00FFBD -5.84%, #025B8C 111.58%);
	}
</style>
