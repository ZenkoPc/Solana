---
import SliderComponent from "./sliderComponent.astro";
---

<section class="max-w-6xl relative text-white mx-auto w-full bg-cover bg-bottom bg-no-repeat" style="background-image: url('/images/end-home.png');">
    <h2 data-aos="fade-down" class="text-4xl mb-9 px-10 2lg:px-0">
        Join a thriving community.
    </h2>
    <div data-aos="fade-up" class="flex overflow-hidden h-[260px] mb-14 lg:mb-0 md:h-[320px] lg:h-[420px] w-auto xl:w-[150%] 2xl:w-screen 2xl:-ml-[35%] xl:-ml-[15%]">
        <div class="w-[700%] md:w-[560%] lg:w-[330%] h-[260px] md:h-[320px] lg:h-[420px] overflow-hidden relative">
          <div class="w-[700%] md:w-[560%] lg:w-[330%] flex gap-3 items-center h-full md:max-h-[320px] lg:max-h-[420px] justify-around absolute left-0 animates animates">
                <div class="flex justify-center gap-3 items-start h-full">
                    <SliderComponent
                        title="11,000"
                        desc="Solana Hacker House participants"
                        imgBig="slide-1.jpg"
                        imgSmall="slide-2.jpg"
                        order="flex-col"
                        color="#F087FF"
                    />
                    <SliderComponent
                        title="48,000"
                        desc="Developers building during Solana Hackathons"
                        imgBig="slide-4.jpg"
                        imgSmall="slide-3.jpg"
                        order="flex-col-reverse"
                        color="#19FB9B"
                    />
                    <SliderComponent
                        title="3,800"
                        desc="Solana Breakpoint 2022 attendees"
                        imgBig="slide-6.jpg"
                        imgSmall="slide-5.jpg"
                        order="flex-col"
                        color="#FFEB3B"
                    />
                    <SliderComponent
                        title="1,075"
                        desc="Daily programs used"
                        imgBig="slide-8.jpg"
                        imgSmall="slide-7.jpg"
                        order="flex-col-reverse"
                        color="#00BCD4"
                    />
                </div>
                <div class="flex justify-center gap-3 items-start h-full">
                    <SliderComponent
                        title="11,000"
                        desc="Solana Hacker House participants"
                        imgBig="slide-1.jpg"
                        imgSmall="slide-2.jpg"
                        order="flex-col"
                        color="#F087FF"
                    />
                    <SliderComponent
                        title="48,000"
                        desc="Developers building during Solana Hackathons"
                        imgBig="slide-4.jpg"
                        imgSmall="slide-3.jpg"
                        order="flex-col-reverse"
                        color="#19FB9B"
                    />
                    <SliderComponent
                        title="3,800"
                        desc="Solana Breakpoint 2022 attendees"
                        imgBig="slide-6.jpg"
                        imgSmall="slide-5.jpg"
                        order="flex-col"
                        color="#FFEB3B"
                    />
                    <SliderComponent
                        title="1,075"
                        desc="Daily programs used"
                        imgBig="slide-8.jpg"
                        imgSmall="slide-7.jpg"
                        order="flex-col-reverse"
                        color="#00BCD4"
                    />
                </div>
          </div>
        </div>
      </div>
    <div class="w-full text-center flex pb-[300px] flex-col justify-center items-center lg:pt-32">
        <h3 data-aos="fade-down" class="text-3xl md:text-4xl max-w-[300px] md:max-w-[736px] mb-11">
            It's time to join the thousands of creators, artists, and developers using Solana.
        </h3>
        <a data-aos="fade-up" href="/get-started" id="purple-gradient-bottom" class="purple-gradient rounded-full px-7 uppercase py-3">
            start building
        </a>
    </div>
</section>

<script>
    const button = document.querySelector('#purple-gradient-bottom')

    button?.addEventListener('mouseenter', () => {
        button.classList.add('purple-gradient-reverse')
        button.classList.remove('purple-gradient')
    })

    button?.addEventListener('mouseleave', () => {
        button.classList.remove('purple-gradient-reverse')
        button.classList.add('purple-gradient')
    })

</script>